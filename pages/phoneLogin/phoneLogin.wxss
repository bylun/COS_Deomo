.head {
  padding-top: 100rpx;
  margin: 0 auto;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.title {
  font-weight: bold;
  font-size: 32rpx;
}

.content {
  padding: 80rpx 80rpx 0 80rpx;
}

.login-form {
  font-size: 34rpx;
}

.text1 {
  font-weight: 100;
}

.placeholder {
  color: #ccc;
}

.phone-input {
  margin-top: 20rpx;
  width: 100%;
}

.validate-code-input {
  margin-top: 30rpx;
  width: 100%;
}

.sms-validate-code-input {
  margin-top: 40rpx;
  width: 100%;
}

canvas {
  width: 90px;
  height: 28px;
  border-radius: 14px;
}

.send-code {
  height: 28px;
  line-height: 28px;
  margin: 0;
  padding: 0;
  font-size: 34rpx;
  outline: none;
  background-color: transparent;
}

.send-code::after {
  border: none;
}

.blue-text {
  color: #1488ba;
}

.gray-text {
  color: #cadbe2;
}

.agree-protocol {
  margin-top: 30rpx;
  font-size: 28rpx;
}

.icon {
  font-size: 28rpx;
}

.login {
  padding: 0 80rpx;
  margin-top: 80rpx;
}

.login-button {
  border-radius: 30rpx;
  height: 90rpx !important;
  background-color: #157fb7 !important;
  color: #fff !important;
}
